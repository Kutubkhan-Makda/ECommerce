@model ECommerce.Areas.LOC_Country.Models.LOC_Country

<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="col-md-9">
            <div class="portlet light bordered card shadow mb-4">
                <div class="portlet-title card-header">
                    <div class="caption">
                        <span class="card-title h2">Category ADD/EDIT</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <h4 class="font-green-sharp">@TempData["CategoryInsertMsg"]</h4>
                    <form class="form-horizontal" role="form" method="post" asp-area="Category" asp-controller="Category" asp-action="Save">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.HiddenFor(x=>x.CategoryId)
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label"><span class="text-danger">*</span>Category Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" asp-for="CategoryName" placeholder="Enter Product Name" />
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row justify-content-center align-items-center">
                                    <div class="col-md-offset-3 col-md-9 justify-content-center align-items-center" style="display: flex;">
                                        <input type="submit" class="btn mb-2 btn-success" value="Save" style="margin-inline-end: 1rem;"></input>
                                        <a type="button" asp-area="Category" asp-controller="Category" asp-action="Admin" class="btn mb-2 btn-danger">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END SAMPLE FORM PORTLET-->
        </div>
    </div>
</div>