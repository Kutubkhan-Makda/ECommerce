@{
    Layout = "_LayoutAdmin";
}
@using System.Data
@model DataTable
@{
	decimal Total = 0;
  string Name = "";
}
@foreach (DataRow dtCart in Model.Rows)
{
  Name = (string)@dtCart["UserName"];
}

<div class="col-md-12 my-4">
    <div class="row">
        <div class="form-group col-auto mr-auto">
            <h1 class="h2 mb-1">@Name Cart</h1>
        </div>
    </div>
  <div class="card shadow">
    <div class="card-body">
      <div class="toolbar">
        <form class="form">
          <div class="form-row">
            <div class="form-group col-auto mr-auto">
                <button type="button" class="btn" data-toggle="modal" data-target=".modal-slide"><span class="fe fe-filter fe-16 text-muted"></span></button>
            </div>
            <div class="form-group col-auto">
              <label for="search" class="sr-only">Search</label>
              <input type="text" class="form-control" id="search1" value="" placeholder="Search">
            </div>
          </div>
        </form>
      </div>

      <!-- table -->
      <table class="table table-borderless table-hover">
        <thead>
          <tr>
            <td>
              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="all2">
                <label class="custom-control-label" for="all2"></label>
              </div>
            </td>
            <th>Image</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
          </tr>
        </thead>
        <tbody>
          @foreach (DataRow dtCart in Model.Rows)
          {
            Name = (string)@dtCart["UserName"];
            Total += (int)@dtCart["Quantity"] * (decimal)@dtCart["Price"];
            <tr>
              <td>
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="2474">
                  <label class="custom-control-label" for="2474"></label>
                </div>
              </td>
              <td>
                <div class="avatar avatar-md">
                  <img src=@dtCart["ImageUrl"] alt="..." class="avatar-img rounded-circle">
                </div>
              </td>
              <td>
                <p class="mb-0 text-muted">@dtCart["Name"]</p>
              </td>
              <td>
                <p class="mb-0 text-muted">@dtCart["Price"]</p>
              </td>
              <td>
                <p class="mb-0 text-muted">@dtCart["Quantity"]</p>
              </td>
              <td>
                <p class="mb-0 text-muted">@dtCart["TotalPrice"]</p>
              </td>
            </tr>
          }
        </tbody>
      </table>
      <div class="toolbar">
        <form class="form">
          <div class="form-row" style="margin-inline: 3rem;">
            <div class="form-group col-auto mr-auto" style="margin-left: 48rem;">
                <h2 class="h4 mb-1">Total Price :</h2>
            </div>
            <div class="form-group col-auto">
                <h2 class="h4 mb-1">@Total</h2>
            </div>
          </div>
        </form>
      </div>
      <nav aria-label="Table Paging" class="mb-0 text-muted">
        <ul class="pagination justify-content-center mb-0">
          <li class="page-item"><a class="page-link" href="#">Previous</a></li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item active"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
      </nav>
    </div>
  </div>
</div>

@section Scripts
{
  <script>
    function DeleteConf()
    {
        if (confirm("Are you sure you want to delete")) {
            return true;
        }
        else {
            return false;
        }
    }
  </script>
}